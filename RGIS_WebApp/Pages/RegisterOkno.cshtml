@page
@model RGIS_WebApp.Pages.RegisterOknoModel
@{
    ViewData["Title"] = "Registracija";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #141414; /* Set the desired background color */
            margin: 0; /* Remove default margin to ensure full page coverage */
            padding: 0; /* Remove default padding */
        }

        /* Centered Registration form with title */
        .center-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-top: 5vh;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 15px; /* Adjust the value to your preference */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border-radius: 8px; /* Rounded corners for input fields */
        }

        span {
            color: #dc3545;
            font-size: 12px;
            display: block;
            margin-top: 4px;
        }

        button {
            background-color: red;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: transform 0.2s ease-in-out; /* Add a transition effect */
        }

            button:hover {
                background-color: red;
                transform: translateY(-3px); /* Move the button slightly upward on hover */
            }
    </style>
</head>
<body>
    <div class="center-container">
        <form name="RegisterForm" method="post" asp-page-handler="Register">
            <h2>@ViewData["Title"]</h2>
            <div>
                <label asp-for="Username"></label>
                <input asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
</body>
</html>
