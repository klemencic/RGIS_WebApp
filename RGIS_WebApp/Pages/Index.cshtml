@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #141414; /* Dark color inspired by Call of Duty */
            color: #495057;
            margin: 0; /* Remove default margin to ensure full page coverage */
            padding: 0; /* Remove default padding */
        }

        .welcome-section {
            text-align: center;
            padding: 50px 0;
        }

        .display-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: red;
        }

        .welcome-image {
            max-width: 100%; /* Ensure the image doesn't exceed the container width */
            margin-top: 20px; /* Add space between text and image */
        }

        .page-description {
            font-size: 1.2rem;
            color: #fff;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="welcome-section">
        <img class="welcome-image" src="https://gaming-cdn.com/images/news/articles/3439/cover/1000x563/call-of-duty-modern-warfare-iii-gets-a-dynamic-background-and-an-ad-on-xbox-cover6544b479ade64.jpg" alt="Welcome Image">
        <h1 class="display-title">Welcome to CODScout</h1>
        <p class="page-description">View your ingame stats, chat with friends and explore the world of Call of Duty with the premium version!</p>
        <!-- Add any additional introductory text or elements here -->
    </div>

    <!-- Add any additional sections, content, or scripts here -->

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- Add any additional scripts as needed -->
</body>
</html>
