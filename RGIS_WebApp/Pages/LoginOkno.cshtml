@page
@model RGIS_WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #141414; 
            margin: 0; 
            padding: 0; 
        }

        
        .center-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-top: 5vh;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 15px; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border-radius: 8px; 
        }

        span {
            color: #dc3545;
            font-size: 12px;
            display: block;
            margin-top: 4px;
        }

        button {
            background-color: red;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: transform 0.2s ease-in-out; 
        }

            button:hover {
                background-color: red;
                transform: translateY(-3px); 
            }
    </style>
</head>
<body>
    <div class="center-container">
        <h2>@ViewData["Title"]</h2>
        <form name="LoginForm" method="post" asp-page-handler="Login">
            <div>
                <label asp-for="Username"></label>
                <input asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
